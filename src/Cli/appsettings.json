{
    "Serilog": {
        "Using": [
            "Serilog.Sinks.File"
        ],
        "MinimumLevel": {
            "Default": "Information"
        },
        "WriteTo": [
            {
                "Name": "File",
                "Args": {
                    "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u11}] {Message:lj}{NewLine}",
                    "rollingInterval": "RollingInterval.Day",
                    "path": "logs/poo-.log"
                }
            }
        ],
        "Properties": {
            "Application Name": "TaskTitan"
        }
    }
}
